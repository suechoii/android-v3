<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.community.mingle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:node="remove"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".MingleApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_mingle_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mingle_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mingle"
        android:usesCleartextTraffic="true"
        tools:targetApi="m"
        android:allowBackup="false">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification"/>

        <activity
            android:name=".views.SplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.ui.member.SignupActivity" />
        <activity
            android:name=".views.ui.member.LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".views.ui.member.StartActivity"/>
        <activity
            android:name=".views.ui.board.PostWriteActivity"
            />
        <activity
            android:name=".views.ui.board.PostEditActivity"/>
        <activity
            android:name=".views.ui.board.PostActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            />
        <activity
            android:name=".views.ui.market.MarketPostActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".views.ui.market.MarketPostEditActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".views.ui.market.MarketPostWriteActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".views.ui.market.MarketImageSlideActivity" />
        <activity android:name=".views.ui.board.ImageSlideActivity" />
        <activity android:name=".views.ui.search.SearchActivity" />
        <activity android:name=".views.ui.search.MarketSearchActivity" />
        <activity android:name=".views.ui.settings.EnquireActivity" />
        <activity android:name=".views.ui.settings.UserPostActivity" />
        <activity android:name=".views.ui.settings.MarketUserPostActivity" />
        <activity android:name=".views.ui.settings.ChangeNameActivity" />
        <activity android:name=".views.ui.settings.TermsActivity" />
        <activity android:name=".views.ui.settings.QuitActivity" />
        <activity android:name=".views.ui.settings.ChangePasswordActivity" />
        <activity android:name=".views.ui.settings.MyPageActivity" />
        <activity android:name=".views.ui.settings.MarketLikedActivity" />
        <activity android:name=".views.ui.settings.ManageAccountActivity" />
        <activity android:name=".views.ui.notification.NotiActivity" />
        <activity android:name=".views.ui.board.HotPostsBoardActivity" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>