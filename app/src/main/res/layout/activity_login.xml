<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ui.member.LoginActivity">

    <data>
        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_variable"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"
        android:layout_marginStart="32dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_emaiL_pw_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="165dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_email_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/uni_email"
                android:layout_width="296dp"
                android:layout_height="44dp"
                android:hint="학교 이메일 주소"
                android:text="@={viewModel.email}"
                android:textAppearance="@style/uni_email"
                android:singleLine="true"
                android:background="@null"
                android:gravity="top"
                android:paddingStart="2dp"
                android:paddingTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/email_red"
                android:layout_width="296dp"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline1"
                app:layout_constraintBottom_toBottomOf="@id/uni_email"
                app:layout_constraintStart_toStartOf="@id/uni_email"
                android:visibility="gone"/>

            <View
                android:id="@+id/email_grey"
                android:layout_width="296dp"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline2"
                app:layout_constraintBottom_toBottomOf="@id/uni_email"
                app:layout_constraintStart_toStartOf="@id/uni_email"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/login_email_group"
            app:layout_constraintTop_toTopOf="@id/login_email_group"
            android:layout_marginTop="69dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="296dp"
                android:layout_height="44dp"
                android:hint="비밀번호"
                android:text="@={viewModel.pw}"
                android:background="@null"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:textAppearance="@style/password"
                android:gravity="top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="2dp"
                android:paddingTop="15dp" />

            <View
                android:id="@+id/password_red"
                android:layout_width="296dp"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline1"
                app:layout_constraintBottom_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="@id/password"
                android:visibility="gone"/>

            <View
                android:id="@+id/password_grey"
                android:layout_width="296dp"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline2"
                app:layout_constraintBottom_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="@id/password"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    <TextView-->
<!--        android:id="@+id/error_tv"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="12sp"-->
<!--        android:textColor="#534A4A"-->
<!--        android:fontFamily="@font/pretendard_regular"-->
<!--        android:layout_marginTop="8dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/login_emaiL_pw_group"-->
<!--        app:layout_constraintStart_toStartOf="@id/login_emaiL_pw_group" />-->

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#534A4A"
        android:text="@string/wrong_info_text"
        android:visibility="invisible"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/login_emaiL_pw_group"
        app:layout_constraintStart_toStartOf="@id/login_emaiL_pw_group" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/help_login"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="335dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="90dp">

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="회원가입"
            android:textColor="#686868"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/help_login"
            app:layout_constraintTop_toTopOf="@id/help_login" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/dividingline"
            app:layout_constraintStart_toStartOf="@id/help_login"
            app:layout_constraintTop_toTopOf="@id/help_login" />

        <TextView
            android:id="@+id/forgot_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="15dp"
            android:text="비밀번호 찾기"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#686868"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/help_login"
            app:layout_constraintTop_toTopOf="@id/help_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:enabled="@{uniEmail.text.length() > 0 &amp;&amp; password.text.length() > 0}"
        android:background="@drawable/bg_btn_signup_next_disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/pretendard_regular"
        android:onClick="@{()-> viewModel.login()}"
        android:layout_marginBottom="16dp"
        android:text="로그인"
        android:textSize="14sp"
        android:textColor="#686868"
        android:gravity="center" />

    <include
        android:id="@+id/layout_progress"
        layout="@layout/progress_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="-60dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>