<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.PostWriteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ui.board.PostWriteActivity"
        android:layout_marginTop="44dp">

    <TextView
        android:id="@+id/post_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray_03"
        android:layout_marginStart="4dp"
        android:text="게시글 작성"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/post_return_iv" />

    <ImageView
        android:id="@+id/post_return_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/post_send_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/pretendard_variable"
        android:textColor="@color/gray_03"
        android:text="게시"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_type_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/post_tv"
        app:layout_constraintStart_toStartOf="parent"
        >
    <TextView
        android:id="@+id/post_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/pretendard_variable"
        android:text="게시판 이름"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/post_type_down_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:tint="@color/gray_03"
        app:srcCompat="@drawable/ic_down"
        app:layout_constraintStart_toEndOf="@id/post_type_tv"
        app:layout_constraintTop_toTopOf="@id/post_type_tv"
        app:layout_constraintBottom_toBottomOf="@id/post_type_tv"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/title_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:textColorHint="@color/gray_02"
        android:hint="제목을 입력해주세요"
        android:text="@={viewModel.title}"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/post_type_select"/>

    <View
        android:id="@+id/post_line_up_iv"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_01"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_et" />

    <EditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@color/gray_02"
        android:background="@null"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="start"
        android:text="@={viewModel.content}"
        android:lineSpacingMultiplier="1.3"
        android:hint="@string/guideline_post_write"
        android:inputType="textMultiLine|textCapSentences"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/post_line_up_iv" />

    <ImageView
        android:id="@+id/post_line_middle_iv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_line_write" />

    <!--    이미지 올리기-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/write_image_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:outlineProvider="bounds"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/post_line_down_iv"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:paddingEnd="20dp"
        tools:listitem="@layout/item_post_write_image"/>


    <View
        android:id="@+id/post_line_down_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_01" />

    <ImageView
        android:id="@+id/post_photo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_gallery"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_anon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="익명"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/orange_02"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/btn_anon_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_anon_tick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="11.5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>