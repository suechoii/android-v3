<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.MarketPostViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ui.board.PostWriteActivity"
        android:layout_marginTop="44dp">

    <TextView
        android:id="@+id/post_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray_03"
        android:layout_marginStart="4dp"
        android:text="판매글 작성"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/post_return_iv" />

    <ImageView
        android:id="@+id/post_return_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/post_send_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/pretendard_variable"
        android:textColor="@color/gray_03"
        android:text="게시"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/image_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_return_iv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/image_market_item"/>
        <ImageView
            android:id="@+id/post_photo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_gallery"/>
        <TextView
            android:id="@+id/post_photo_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="13sp"
            android:textColor="@color/gray_04"
            android:layout_below="@id/post_photo_iv"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/write_image_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:outlineProvider="bounds"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toEndOf="@id/image_select_btn"
        app:layout_constraintTop_toTopOf="@id/image_select_btn"
        tools:listitem="@layout/item_post_write_market_image" />


    <EditText
        android:id="@+id/title_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="제목을 입력하세요*"
        android:text="@={viewModel.write_title}"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/image_select_btn"/>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_01"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_et" />

    <EditText
        android:id="@+id/price_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="희망하는 가격을 입력하세요*"
        android:text="@={viewModel.write_price}"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/line"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/price_et"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/btn_free_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나눔"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_03"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/btn_free_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_anon_untick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11.5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_01"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_et" />

    <EditText
        android:id="@+id/desc_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="@null"
        android:hint="상품에 대해 설명해 주세요*"
        android:maxLength="1000"
        android:text="@={viewModel.write_content}"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/line2"/>

    <TextView
        android:id="@+id/word_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/1000"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="14sp"
        android:textColor="@color/gray_02"
        app:layout_constraintTop_toBottomOf="@id/desc_et"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/desc_et"/>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_01"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_count_tv" />

    <EditText
        android:id="@+id/place_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@null"
        android:hint="희망 거래장소/시간대"
        android:maxLength="300"
        android:text="@={viewModel.write_location}"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/line3"/>

    <TextView
        android:id="@+id/word_count2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/300"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="14sp"
        android:textColor="@color/gray_02"
        app:layout_constraintTop_toBottomOf="@id/place_time_et"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/place_time_et"/>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_01"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_count2_tv" />

    <EditText
        android:id="@+id/link_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="오픈채팅방 링크"
        android:text="@={viewModel.write_chatUrl}"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/line4"/>

        <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_01"
        android:layout_marginBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_anonymous" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_anonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btn_anon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="익명"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/orange_02"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/btn_anon_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_anon_tick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11.5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>