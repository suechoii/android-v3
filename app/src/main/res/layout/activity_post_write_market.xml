<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.MarketPostViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        tools:context=".views.ui.market.MarketPostWriteActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/post_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center_vertical"
                android:text="판매글 작성"
                android:textColor="@color/gray_03"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/post_return_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/post_return_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close" />

            <TextView
                android:id="@+id/post_send_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/pretendard_variable"
                android:gravity="center_vertical"
                android:text="게시"
                android:textColor="@color/gray_03"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/image_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bar">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/image_market_item" />

            <ImageView
                android:id="@+id/post_photo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_gallery" />

            <TextView
                android:id="@+id/post_photo_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_photo_iv"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pretendard_medium"
                android:text="0/10"
                android:textColor="@color/gray_04"
                android:textSize="13sp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/write_image_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:outlineProvider="bounds"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toEndOf="@id/image_select_btn"
            app:layout_constraintTop_toTopOf="@id/image_select_btn"
            tools:listitem="@layout/item_post_write_market_image" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/image_select_btn"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:background="@null"
                        android:fontFamily="@font/pretendard_regular"
                        android:hint="제목을 입력하세요*"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.write_title}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/line_title_price"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gray_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_et" />

                    <RadioGroup
                        android:id="@+id/sellOrShare_radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:checkedButton="@id/sell_radio_btn"
                        app:layout_constraintTop_toBottomOf="@id/line_title_price">

                        <RadioButton
                            android:id="@+id/sell_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:button="@drawable/ic_anon_untick"
                            android:buttonTint="@color/radio_group_color_selector"
                            android:textColor="@color/radio_group_color_selector"
                            android:text="판매하기"
                            android:textSize="12sp"
                            android:layout_marginEnd="20dp"/>

                        <RadioButton
                            android:id="@+id/share_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:buttonTint="@color/radio_group_color_selector"
                            android:textColor="@color/radio_group_color_selector"
                            android:button="@drawable/ic_anon_untick"
                            android:text="나눔하기"
                            android:textSize="12sp" />
                    </RadioGroup>

                    <View
                        android:id="@+id/line"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gray_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sellOrShare_radioGroup" />

                    <LinearLayout
                        android:id="@+id/price_container"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/line"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/price_currencies_dropdown"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="@color/gray_02"
                            android:paddingBottom="4dp"
                            app:endIconTint="@color/gray_02"
                            app:layout_constraintBottom_toBottomOf="@id/price_et"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/price_et">

                            <AutoCompleteTextView
                                android:id="@+id/price_currencies_dropdown_item"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:inputType="none"
                                android:paddingStart="10dp"
                                android:text="HKD"
                                android:paddingTop="0dp"
                                android:paddingEnd="0dp"
                                android:paddingBottom="0dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <EditText
                            android:id="@+id/price_et"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@null"
                            android:textColorHint="@color/gray_02"
                            android:fontFamily="@font/pretendard_regular"
                            android:hint="희망하는 가격을 입력하세요*"
                            android:inputType="text"
                            android:maxLines="1"
                            android:text="@={viewModel.writePrice}"
                            android:textSize="16sp"
                            />
                    </LinearLayout>


                    <View
                        android:id="@+id/line2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/price_container" />

                    <EditText
                        android:id="@+id/desc_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:background="@null"
                        android:textColorHint="@color/gray_02"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="top"
                        android:hint="상품에 대해 설명해 주세요*"
                        android:inputType="textMultiLine"
                        android:maxLength="1000"
                        android:minHeight="64dp"
                        android:text="@={viewModel.write_content}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/line2" />

                    <TextView
                        android:id="@+id/word_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="0/1000"
                        android:textColor="@color/gray_02"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/desc_et"
                        app:layout_constraintTop_toBottomOf="@id/desc_et" />

                    <View
                        android:id="@+id/line3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gray_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/word_count_tv" />

                    <EditText
                        android:id="@+id/place_time_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:background="@null"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="top"
                        android:hint="희망 거래장소/시간대*"
                        android:inputType="textMultiLine"
                        android:textColorHint="@color/gray_02"
                        android:maxLength="300"
                        android:minHeight="50dp"
                        android:text="@={viewModel.write_location}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/line3" />

                    <TextView
                        android:id="@+id/word_count2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="0/300"
                        android:textColor="@color/gray_02"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/place_time_et"
                        app:layout_constraintTop_toBottomOf="@id/place_time_et" />

                    <View
                        android:id="@+id/line4"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gray_01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/word_count2_tv" />

                    <EditText
                        android:id="@+id/link_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:textColorHint="@color/gray_02"
                        android:background="@null"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="top"
                        android:hint="오픈채팅방 링크 (https://open.kakao.com/....형식으로 입력)*"
                        android:inputType="textMultiLine"
                        android:text="@={viewModel.write_chatUrl}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/line4" />

                    <TextView
                        android:id="@+id/linkError_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/link_et"
                        app:layout_constraintStart_toStartOf="@id/link_et"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="14sp"
                        android:textColor="@color/error_red"
                        android:translationY="-0.1sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        app:layout_constraintTop_toBottomOf="@id/linkError_tv"
                        app:layout_constraintStart_toStartOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:background="@color/gray_01"
            app:layout_constraintBottom_toTopOf="@id/btn_anonymous"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/btn_anon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="익명"
                android:textColor="@color/orange_02"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_anon_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="11.5dp"
                android:src="@drawable/ic_anon_tick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>