<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
        name="viewModel"
        type="com.community.mingle.viewmodel.MyPageViewModel" />

        <variable
            name="activity"
            type="com.community.mingle.views.ui.settings.TermsActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/regulation_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:contentInsetLeft="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <TextView
                android:id="@+id/regulationName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollview_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/regulation_toolbar">

        <TextView
            android:id="@+id/terms_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/regulations" />
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>