<!--            app:layout_constraintBottom_toBottomOf="@id/underline_grey_iv">-->

<!--            <AutoCompleteTextView-->
<!--                android:id="@+id/domain_filter"-->
<!--                android:layout_width="144dp"-->
<!--                android:layout_height="44dp"-->
<!--                android:fontFamily="@font/pretendard_regular"-->
<!--                android:ellipsize="end"-->
<!--                android:inputType="none"-->
<!--                android:maxLines="1"-->
<!--                android:singleLine="true"-->
<!--                android:paddingTop="14dp"-->
<!--                android:paddingStart="12dp"-->
<!--                android:text="선택"-->
<!--                android:textSize="16sp"-->
<!--                android:paddingBottom="11dp"-->
<!--                android:textColor="@color/gray_03"-->
<!--                tools:ignore="LabelFor"/>-->

<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <TextView
            android:id="@+id/domain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/et_symbol_iv"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/et_symbol_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/next_btn_disabled"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_btn_signup_verify"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/next_btn_enabled"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/ic_btn_signup_verify_enabled"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/already_exist_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="275dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="33dp">

        <TextView
            android:id="@+id/already_exist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray_03"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signup_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login_if_exist"
            android:textColor="@color/orange_01"
            android:textSize="14sp"
            android:visibility="gone"
            android:fontFamily="@font/pretendard_regular"
            android:paddingStart="5dp"
            android:paddingEnd="6dp"
            android:paddingBottom="9dp"
            android:paddingTop="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/already_exist_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layout_progress"
        layout="@layout/progress_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>