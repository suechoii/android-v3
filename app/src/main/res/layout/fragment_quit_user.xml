<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.ui.settings.QuitUserFragment">

    <data>
        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.MyPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/return_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pls_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안전한 탈퇴를 위해\n아이디와 비밀번호를\n입력해 주세요."
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_emaiL_pw_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="223dp"
        android:layout_marginHorizontal="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_email_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/uni_email"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="학교 이메일 주소"
                android:text="@={viewModel.quitEmail}"
                android:textAppearance="@style/uni_email"
                android:singleLine="true"
                android:background="@null"
                android:gravity="top"
                android:paddingStart="2dp"
                android:paddingTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/email_red"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline1"
                app:layout_constraintBottom_toBottomOf="@id/uni_email"
                app:layout_constraintStart_toStartOf="@id/uni_email"
                android:visibility="gone"/>

            <View
                android:id="@+id/email_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline2"
                app:layout_constraintBottom_toBottomOf="@id/uni_email"
                app:layout_constraintStart_toStartOf="@id/uni_email"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@id/login_email_group"
            app:layout_constraintTop_toTopOf="@id/login_email_group"
            android:layout_marginTop="69dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="비밀번호"
                android:text="@={viewModel.quitPassword}"
                android:background="@null"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:textAppearance="@style/password"
                android:gravity="top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="2dp"
                android:paddingTop="15dp" />

            <View
                android:id="@+id/password_red"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline1"
                app:layout_constraintBottom_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="@id/password"
                android:visibility="gone"/>

            <View
                android:id="@+id/password_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/textfieldline2"
                app:layout_constraintBottom_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="@id/password"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wrong_info_text"
        android:textSize="12sp"
        android:textColor="#534A4A"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/login_emaiL_pw_group"
        app:layout_constraintStart_toStartOf="@id/login_emaiL_pw_group"
        android:visibility ="invisible"/>

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_btn_signup_next_disabled"
            android:gravity="center"
            android:enabled="false"
            android:text="밍글을 탈퇴합니다."
            android:textColor="#686868"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/layout_progress"
            layout="@layout/progress_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="-60dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>