<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ui.member.SignUpTermsFragment">

    <data>
        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.SignupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <View
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/gray_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/return_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pls_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginStart="32dp"
        android:gravity="top"
        android:text="밍글 서비스 약관에\n동의해 주세요."
        android:fontFamily="@font/pretendard_regular"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pls_agree"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/all_agree_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_one"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_checkbox"
                android:button="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/all_agree"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/all_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="top"
                android:paddingTop="7dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="약관 전체동의"
                android:fontFamily="@font/pretendard_semibold"/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/gray_02"/>

        <LinearLayout
            android:id="@+id/above_14_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_two"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_checkbox"
                android:button="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/above_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="top"
                android:paddingTop="7dp"
                android:text="만 14세 이상입니다."
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/must_use_agree_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_three"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_checkbox"
                android:button="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/must_use_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="top"
                android:paddingTop="7dp"
                android:text="@string/must_use_agree"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_four"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_checkbox"
                android:button="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/must_private_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="top"
                android:paddingTop="7dp"
                android:text="@string/must_private_agree"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_btn_signup_next_disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:text="다음으로"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="14sp"
        android:textColor="@color/gray_04"
        android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>