<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_draggable="true"
    android:background="@drawable/home_round_dialog"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="536dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/before_start"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="시작하기 전에,"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="20dp"
                android:textAppearance="@style/before_start"
                android:lineHeight="23.87dp"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toStartOf="@id/total"
                app:layout_constraintTop_toTopOf="@id/total"/>


            <TextView
                android:id="@+id/promise"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="더 나은 밍글을 위해 약속하기"
                android:fontFamily="@font/pretendard_semibold"
                android:background="@color/orange_03"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textAppearance="@style/promise"
                android:textFontWeight="700"
                android:lineHeight="26.25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="@id/total"
                app:layout_constraintStart_toStartOf="@id/total"/>

            <!--        첫번째 규칙-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/first_rule"
                android:layout_width="314dp"
                android:layout_height="42dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="23dp"
                    android:text="1."
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="19.09dp"
                    android:textColor="@color/gray_03"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="23dp"
                    android:text="서로 존중을 주고 받아요"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:lineHeight="19.09dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@id/first_rule"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="21dp"
                    android:text="서로 비난하지 않고 함께 존중하는 커뮤니티를 만들어가요."
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:lineHeight="14.52dp"
                    app:layout_constraintStart_toStartOf="@id/first_rule"
                    app:layout_constraintTop_toTopOf="@id/first_rule"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_01"
                android:layout_marginTop="162dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!--        두번째 규칙-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/second_rule"
                android:layout_width="314dp"
                android:layout_height="42dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="178dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="23dp"
                    android:text="2."
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="19.09dp"
                    android:textColor="@color/gray_03"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="23dp"
                    android:text="서로 도움을 주고 받아요"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:lineHeight="19.09dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@id/second_rule"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="21dp"
                    android:text="궁금한 점들을 질문하고, 내가 줄 수 있는 도움을 나눠봐요."
                    android:textSize="12dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/black"
                    android:lineHeight="14.52dp"
                    app:layout_constraintStart_toStartOf="@id/second_rule"
                    app:layout_constraintTop_toTopOf="@id/second_rule"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_01"
                android:layout_marginTop="245dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!--        세번째 규칙-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/third_rule"
                android:layout_width="314dp"
                android:layout_height="42dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="261dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="23dp"
                    android:text="3."
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="19.09dp"
                    android:textColor="@color/gray_03"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="23dp"
                    android:text="이용규칙을 지켜주세요."
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:lineHeight="19.09dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@id/third_rule"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="21dp"
                    android:text="이용규칙을 지키며 더 나은 커뮤니티를 만들어가요."
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:lineHeight="14.52dp"
                    app:layout_constraintStart_toStartOf="@id/third_rule"
                    app:layout_constraintTop_toTopOf="@id/third_rule"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_01"
                android:layout_marginTop="327dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/detail_terms_tv"
            android:layout_width="119dp"
            android:layout_height="13dp"
            android:layout_marginTop="18dp"
            android:text="@string/detail_terms"
            android:textSize="11dp"
            android:lineHeight="13.13dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_04"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/all_checked"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn_signup_next_enabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            android:text="확인했습니다."
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>