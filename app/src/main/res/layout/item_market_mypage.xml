<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.community.mingle.service.models.market.MarketPostResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@id/mainCard"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_hkd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HKD"
            android:textColor="@color/gray_05"
            android:fontFamily="@font/pretendard_regular"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/titletext"
            app:layout_constraintStart_toStartOf="@id/titletext" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.price}"
            android:textColor="@color/gray_05"
            android:fontFamily="@font/pretendard_regular"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/titletext"
            app:layout_constraintStart_toEndOf="@id/price_hkd_tv" />

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="8dp"
            android:layout_marginEnd="20dp"
            android:paddingEnd="4dp"
            android:paddingBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainCard"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:adjustViewBounds="true"
            card_view:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/price_hkd_tv"
            app:layout_constraintBottom_toBottomOf="@id/mainCard"
            android:layout_marginTop="43dp">
        <TextView
            android:id="@+id/anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="@{item.nickName}"
            android:textColor="@color/grayOrange"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_ellipse_118"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/anonymous"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="@{item.createdAt}"
                android:textColor="#AB9F9D"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/dot"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/more_btn"
            app:layout_constraintTop_toTopOf="@id/detail_1"
            >
            <ImageView
                android:id="@+id/fav_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                android:src="@drawable/ic_fav_market"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/favtext"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/favtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="@{item.likeCount}"
                android:textColor="@color/grayOrange"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/commentimg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/commentimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_interaction_comment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/commenttext"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@{item.commentCount}"
                android:textColor="@color/grayOrange"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/baseline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_01"
            app:layout_constraintTop_toBottomOf="@id/mainCard"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/chg_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매상태 변경"
            app:layout_constraintTop_toBottomOf="@id/baseline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_01.5"
            app:layout_constraintTop_toBottomOf="@id/chg_status_tv"
            android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>