<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.community.mingle.viewmodel.PostViewModel" />

        <variable
            name="item"
            type="com.community.mingle.service.models.Reply" />

        <variable
            name="position"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp">

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_comment_reply2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp"
        android:paddingTop="3dp"
        android:layout_marginTop="12dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/comment_reply_bg">

<!--        <TextView-->
<!--            android:id="@+id/mention_tv"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text=""-->
<!--            android:textSize="13sp"-->
<!--            android:fontFamily="@font/pretendard_regular"-->
<!--            android:textColor="@color/orange_02"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <TextView
            android:id="@+id/reply_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{item.nickname + item.content}"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="10dp"
            android:autoLink="web"
            android:textColorLink="@color/orange_02"
            app:layout_constraintEnd_toStartOf="@id/btn_reply_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_reply_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_comment_more"/>

        <TextView
            android:id="@+id/reply_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.nickname}"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_03"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reply_content"/>

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ellipse"
            app:layout_constraintTop_toBottomOf="@id/reply_content"
            app:layout_constraintStart_toEndOf="@id/reply_nickname"
            android:layout_marginTop="18dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/reply_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp"
            android:textColor="@color/gray_03"

            app:layout_constraintTop_toBottomOf="@id/reply_content"
            app:layout_constraintStart_toEndOf="@id/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_reply_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/reply_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp">

            <ImageView
                android:id="@+id/reply_like_iv"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_comment_like"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/reply_like_count"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/reply_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@{item.likeCount}"
                android:textSize="12sp"
                android:textColor="@color/gray_03"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btn_reply_reply"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:paddingTop="2dp"
            android:paddingLeft="4dp"
            android:src="@drawable/ic_comment_reply"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reply_content"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>