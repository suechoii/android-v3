    <style name="DropDownTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/gray_03</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconTint">@color/gray_03</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name = "tab_text" parent = "TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name ="android:fontFamily">@font/pretendard_regular</item>
        <item name = "textAllCaps">false</item>
        <item name = "android:textAllCaps">false</item>
    </style>

    <style name="AlertDialogTheme" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="menu" >
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="overlay" >
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/overlay_color</item>
    </style>



</resources>